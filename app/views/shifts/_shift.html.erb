<div id="<%= dom_id shift %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Starts at:</strong>
    <%= shift.starts_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Ends at:</strong>
    <%= shift.ends_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Position:</strong>
    <%= shift.position %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Location:</strong>
    <%= link_to shift.location.name, shift.location %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Assigned employee:</strong>
    <% if shift.assigned_employee %>
      <%= link_to shift.assigned_employee.name, shift.assigned_employee %> (<%= shift.assigned_employee.position %>)
    <% else %>
      N/A
    <% end %>
  </p>

</div>
