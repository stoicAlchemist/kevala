<div id="<%= dom_id location %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= location.name %>
  </p>
  <p>
    <strong class="block font-medium mb-1">Future Unassigned Shifts:</strong>
    <% location.future_unasigned_shifts.each do |us| %>
      <%= link_to us.starts_at, us %>
    <% end %>
    <%= "N/A" if location.future_unasigned_shifts.empty? %>
  </p>
</div>
